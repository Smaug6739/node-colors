{
	"version": "2.4.2",
	"compilerOptions": {
		"lib": [
			"es6",
			"DOM"
		],
		"esModuleInterop": true,
		"target": "es6",
		"module": "commonjs",
		"noEmitOnError": true,
		"strict": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"outDir": "./build",
		"rootDir": "src",
		"removeComments": false,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
	},
	"exclude": [
		"node_modules",
	]
}